{
  "openapi": "3.0.0",
  "info": {
    "title": "Basic Node.js API",
    "version": "1.0.0",
    "description": "Simple Express API with three endpoints: '/', '/hello', and '/status'."
  },
  "servers": [
    {
      "url": "http://my-node-app.jaime-poc-2285.svc.cluster.local:80",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Root endpoint",
        "description": "Returns a plain text greeting message.",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Hello World from Node.js inside Docker!"
                }
              }
            }
          }
        }
      }
    },
    "/hello": {
      "get": {
        "summary": "Hello endpoint",
        "description": "Returns a JSON message saying hello.",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Hello, this is the /hello endpoint!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/status": {
      "get": {
        "summary": "Status endpoint",
        "description": "Returns current API status with timestamp.",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "ok"
                    },
                    "timestamp": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2025-10-30T12:00:00.000Z"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}

